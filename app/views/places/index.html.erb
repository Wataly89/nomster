<% @places.each do |place| %>
<div class="booyeah-box col-10 offser-1">
	<h1><%= link_to place.name, place_path(place) %></h1><br/>
	<i><%= place.address %></i>
	<p><<%= place.description %></p><br />

	<% if place.comments.present? %>
	<div class="col-12">
		<blockquote>
			<% if place.comments.last.humanized_rating.present? %>
			<b><%= place.comments.last.humanized_rating %></b> -
			<% end %>
			<%= place.comments.last.message %>
			<small><%= place.comments.last.user.email %></small>
		</blockquote>
	</div>
	<% end %>
	<% if place.photos.present? %>
	<div class="col-12">
		<div class="indexphoto">
			<% if place.photos.last.present? %>
			<b><%= image_tag place.photos.last.picture.url, class: 'idx-photo' %></b> -
			<% end %>
		</div>        
		<blockquote>
			<small>
				<%= place.photos.last.caption %><br />  
			</blockquote>
		</div>
		<% end %>  

	</div>
	<% end %>

	<%= will_paginate @places, previous_label: h("<"), next_label: h(">") %>

